    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="Sign Up Screen"
        android:layout_marginBottom="7dp"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="?attr/actionModeSplitBackground" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:id="@+id/img"
        android:src="@drawable/camera"
        android:layout_below="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@drawable/common_plus_signin_btn_icon_dark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/sso"
        android:hint="SSO"
        android:textColor="#00796B"
        android:background="#F9FBE7"
        android:layout_marginBottom="7dp"
        android:layout_below="@+id/img"
        android:layout_alignEnd="@+id/signup" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginBottom="7dp"
        android:id="@+id/signup"
        android:elevation="2dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/address"
        android:layout_alignEnd="@+id/address"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00796B"
        android:background="#F9FBE7"
        android:inputType="textPersonName"
        android:hint="Full Name"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:id="@+id/fullname"
        android:layout_below="@+id/sso"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="#00796B"
        android:background="#F9FBE7"
        android:id="@+id/pswdd"
        android:hint="Password"
        android:layout_marginBottom="7dp"
        android:layout_below="@+id/fullname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:textColor="#00796B"
        android:background="#F9FBE7"
        android:id="@+id/address"
        android:hint="Address"
        android:layout_below="@+id/pswdd"
        android:layout_marginBottom="7dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
